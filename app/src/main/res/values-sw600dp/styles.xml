<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/button_bg</item>
        <item name="colorPrimaryDark">@color/button_selector</item>
        <item name="colorAccent">@color/button_selector</item>
        <item name="android:textColorPrimary">@color/myTextPrimaryColor</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListViewStyle</item>
        <item name="android:windowBackground">@color/myWindowBackground</item>
        <item name="colorButtonNormal">@color/ButtonColor</item>
        <item name="dropDownListViewStyle">@style/mySpinnerStyle</item>
    </style>

    <style name="DialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/DrawerArrowColor</item>
    </style>

    <style name="ToolBarStyle" parent="">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="DropDownListViewStyle">
        <item name="android:dividerHeight">1dp</item>
        <item name="android:divider">#D3D3D3</item>
    </style>
    //App Button

    <style name="button" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <!--  <item name="android:shadowColor">#FF000000</item>-->
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/medium_textsize</item>
        <item name="android:background">@drawable/ic_button_selector</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>


    //App EditText

    <style name="Style.EdiText" parent="@android:style/Widget.EditText">
        <!--  <item name="android:gravity">center_vertical|center_horizontal</item>-->
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#ff9abad2</item>
        <!--  <item name="android:shadowColor">#FF000000</item>-->
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/ic_edittext_bg</item>
        <item name="android:textSize">@dimen/medium_textsize</item>

    </style>

    /
    //App ProgressBar

    <style name="ProgressHUD" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="avenirHeavyTextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">@font/avenir_85_heavy</item>
        <item name="android:textSize">@dimen/medium_textsize</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <!--<item name="android:paddingRight">10dp</item>-->
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>


    <!--__________________________________Pkg login screen style_____________________________-->
    //TextView in Package LogIn List Item



    //App EditText

    <style name="Style.EdiTextPkgLogIn" parent="@android:style/Widget.EditText">
        <!--  <item name="android:gravity">center_vertical|center_horizontal</item>-->
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColor">#000000</item>
        <!--  <item name="android:shadowColor">#FF000000</item>-->
        <item name="android:textSize">@dimen/edittext_pkg_login</item>
        <item name="android:padding">@dimen/edittext_padding_pkg_login</item>
        <item name="android:background">@drawable/ic_edittext_bg</item>

    </style>
    //Check box

    <style name="CheckBoxPkgLogIn" parent="@android:style/Widget.CompoundButton.CheckBox">
        <!--  <item name="android:gravity">center_vertical|center_horizontal</item>-->
        <!--  <item name="android:shadowColor">#FF000000</item>-->
        <item name="android:textSize">@dimen/medium_textsize</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:drawableLeft">@drawable/ic_checkbox_selector</item>

        <item name="android:background">@android:color/transparent</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/avenir_roman</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">middle</item>

    </style>

    <!--__________________________________________________________________________________________-->


    <style name="mySpinnerStyle" parent="android:Widget.ListView.DropDown">

        <item name="android:dividerHeight">1dp</item>
        <item name="android:divider">#D3D3D3</item>
        <item name="android:dropDownWidth">wrap_content</item>
    </style>
    <!--<item name="android:background">@drawable/spinner_list</item>-->

    <style name="calendar.text" parent="android:Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    //TextView colon at contact Us

    <style name="Style.TextView" parent="@android:style/Widget.TextView">
        <item name="android:text">:</item>
        <item name="android:textSize">@dimen/textsize_pkg_login</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="packageButtonStyle" parent="@android:style/Widget.Button">
        <!--  <item name="android:gravity">center_vertical|center_horizontal</item>-->

        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">@drawable/ic_edittext_bg</item>

    </style>

    <style name="customTabLayout" parent="Widget.Design.TabLayout">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/big_textsize</item>
        <item name="android:tag">@string/avenir_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="tabIndicatorHeight">2dp</item>
    </style>



    <!-- for text -->
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/medium_above_textsize</item>
        <item name="android:tag">@string/avenir_roman</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="radioButtonTheme" parent="Theme.AppCompat.Light.DarkActionBar"></style>

</resources>
