<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/actionbar_height"
    android:background="@color/button_bg"
    android:elevation="0dp"
    android:id="@+id/tool_bar"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/tab_action_left_linear"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="-5dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/tab_action_Left_imageView"
                android:src="@drawable/ic_notifii_track_black_logo"
                android:scaleType="fitCenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageButton
                android:id="@+id/buttonActionLeft"
                android:background="@drawable/ic_back_icon"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mobile_left_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:visibility="visible"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backImage"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_back_icon"
                android:paddingRight="10dp"
                android:contentDescription="back"
                android:visibility="gone" />
            <ImageView
                android:id="@+id/iv_app_icon"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_app" />

        </LinearLayout>

        <TextView
            android:id="@+id/textViewActionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/bigger_textsize"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/avenir_medium"/>


        <ImageView
            android:id="@+id/actionImageRight"
            android:layout_marginRight="10dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="gone"
            android:src="@drawable/ic_app" />

        <TextView
            android:id="@+id/action_right_text"
            android:layout_marginRight="10dp"
            android:adjustViewBounds="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/medium_above_textsize"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="gone" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:paddingRight="3dp"
            android:layout_gravity="bottom"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content">
            <Button
                android:layout_marginTop="2dp"
                android:id="@+id/buttonActionRight"
                android:textAllCaps="false"
                android:background="@drawable/ic_action_right_button"
                android:layout_gravity="right|bottom"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:textColor="@color/black"
                android:fontFamily="@font/avenir"
                android:layout_marginRight="5dp"
                android:layout_height="40dp"/>
        </FrameLayout>

    </RelativeLayout>

</androidx.appcompat.widget.Toolbar>