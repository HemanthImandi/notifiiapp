<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_alert_pkg_log_in"
    android:minWidth="1000dp"
    android:orientation="vertical"
    android:padding="25dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_success_icon" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:lineSpacingExtra="3dp"
        android:text="@string/alert_success_title"
        android:textColor="#90DA3D"
        android:textSize="@dimen/biggest_textsize"
        style="@style/NoPaddingTextViewStyle"/>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:lineSpacingExtra="3dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:textColor="@color/text"
            style="@style/NoPaddingTextViewStyle" />

    </ScrollView>

</LinearLayout>