<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/et_rounded_corners"
    android:excludeFromRecents="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:padding="@dimen/layout_margin">

    <TextView
        style="@style/NoPaddingTextViewStyle"
        android:layout_width="400dp"
        android:layout_height="1dp"
        android:gravity="center"
        android:paddingLeft="0dp"
        android:visibility="gone"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/update_username_pwdTitle"
        style="@style/avenirMediumTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="0dp"
        android:text="@string/update_username_pwd_title"
        android:textSize="@dimen/bigger_textsize" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_margin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/NoPaddingTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="0dp"
                android:text="Full Name:"
                android:textColor="@color/background_color" />

            <TextView
                android:id="@+id/fullnameTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/frame_margin"
                android:gravity="left"
                style="@style/NoPaddingTextViewStyle"
                android:textSize="@dimen/big_textsize"
                android:textColor="@color/text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/userNameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/frame_margin"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/usernameET"
                style="@style/EditTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="0"
                android:layout_gravity="left"
                android:hint="@string/username"
                android:padding="10dp" />


            <TextView
                android:id="@+id/textview_check_availability"
                style="@style/NoPaddingTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:visibility="visible"
                android:text="[Check availability]" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/frame_margin"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/newpasswordET"
                style="@style/EditTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="0"
                android:inputType="textPassword"
                android:layout_gravity="left"
                android:hint="@string/text_new_password"
                android:padding="10dp" />


            <TextView
                android:id="@+id/checkavailability1"
                style="@style/NoPaddingTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:visibility="invisible"
                android:text="[Check availability]" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/frame_margin"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/confirmpaswordEt"
                style="@style/EditTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="0"
                android:inputType="textPassword"
                android:layout_gravity="left"
                android:hint="@string/text_confirm_password"
                android:padding="10dp" />


            <TextView
                android:id="@+id/checkavailability2"
                style="@style/NoPaddingTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:visibility="invisible"
                android:text="[Check availability]" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/updateMyaccountBtn"
                style="@style/ButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/layout_margin"
                android:text="@string/action_update_my_user_account"
                />


            <TextView
                android:id="@+id/checkavailability3"
                style="@style/NoPaddingTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:visibility="invisible"
                android:text="[Check availability]" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textviewCancel"
                style="@style/avenirMediumTextViewStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancel"
                android:gravity="center"
                android:textColor="@color/text"
                android:textSize="@dimen/bigger_textsize"
                />


            <TextView
                android:id="@+id/checkavailability4"
                style="@style/NoPaddingTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:paddingLeft="0dp"
                android:visibility="invisible"
                android:text="[Check availability]" />
        </LinearLayout>
       <!-- <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/updateMyaccountBtn"
                style="@style/ButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/action_update_my_user_account" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:tag="@string/avenir_roman"
                android:text="[Check availability]"
                android:textColor="@color/text"
                android:visibility="invisible" />
        </LinearLayout>-->
    </LinearLayout>


</LinearLayout>
