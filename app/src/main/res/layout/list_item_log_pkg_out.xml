<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainParentLL"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/parentLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/checkBox"
            android:layout_width="@dimen/progressbar_width_height"
            android:layout_height="@dimen/progressbar_width_height"
            android:layout_gravity="top"
            android:contentDescription="select package"
            android:background="@drawable/ic_check_default"
            android:button="@android:color/transparent"
            android:textColor="@color/text" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_recipientName"
                style="@style/NoPaddingTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/avenir_85_heavy"
                android:text="@string/name" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/NoPaddingTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small_textsize"
                    android:ellipsize="end"
                    android:layout_marginBottom="5dp"
                    android:text="@string/tracking_number"
                    android:textColor="@color/log_pkg_out_others_color"/>

                <TextView
                    android:id="@+id/tv_trackingNumber"
                    style="@style/NoPaddingTextViewStyle"
                    android:textSize="@dimen/small_textsize"
                    android:layout_marginBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:singleLine="true" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/firstDynamicLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4">

                    <TextView
                        android:id="@+id/firstlabelTV"
                        style="@style/NoPaddingTextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/log_pkg_out_others_color"
                        android:textSize="@dimen/small_textsize" />

                    <TextView
                        android:id="@+id/firstValueTV"
                        style="@style/NoPaddingTextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:layout_marginBottom="5dp"
                        android:textSize="@dimen/small_textsize" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6">

                    <TextView
                        android:id="@+id/secondLabelTV"
                        style="@style/NoPaddingTextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:layout_marginBottom="5dp"
                        android:paddingLeft="10dp"
                        android:textSize="@dimen/small_textsize"
                        android:textColor="@color/log_pkg_out_others_color"/>

                    <TextView
                        android:id="@+id/secondValueTV"
                        style="@style/NoPaddingTextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:layout_marginBottom="5dp"
                        android:singleLine="true"
                        android:textSize="@dimen/small_textsize" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/secondDynamicLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4">

                    <TextView
                        android:id="@+id/thirdlabelTV"
                        style="@style/NoPaddingTextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/log_pkg_out_others_color"
                        android:textSize="@dimen/small_textsize" />

                    <TextView
                        android:id="@+id/thirdValueTV"
                        style="@style/NoPaddingTextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:layout_marginBottom="5dp"
                        android:singleLine="true"
                        android:textSize="@dimen/small_textsize" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6">

                    <TextView
                        android:id="@+id/fourthLabelTV"
                        style="@style/NoPaddingTextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:layout_marginBottom="5dp"
                        android:paddingLeft="10dp"
                        android:textSize="@dimen/small_textsize"
                        android:textColor="@color/log_pkg_out_others_color"/>

                    <TextView
                        android:id="@+id/fourthValueTV"
                        style="@style/NoPaddingTextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:layout_marginBottom="5dp"
                        android:singleLine="true"
                        android:textSize="@dimen/small_textsize" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/NoPaddingTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:textSize="@dimen/small_textsize"
                    android:text="@string/received"
                    android:textColor="@color/log_pkg_out_others_color"/>

                <TextView
                    android:id="@+id/tv_dateReceived"
                    style="@style/NoPaddingTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:textSize="@dimen/small_textsize" />

                <TextView
                    android:id="@+id/tv_mailroomLabel"
                    style="@style/NoPaddingTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:paddingLeft="10dp"
                    android:textSize="@dimen/small_textsize"
                    android:text="@string/text_mailroom"
                    android:textColor="@color/log_pkg_out_others_color"/>

                <TextView
                    android:id="@+id/tv_mailroom"
                    style="@style/NoPaddingTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small_textsize"
                    android:ellipsize="middle"
                    android:singleLine="true" />

            </LinearLayout>

            <TextView
                android:id="@+id/specialIns_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/small_textsize"
                android:visibility="gone"
                android:layout_marginTop="@dimen/item_margin"
                style="@style/NoPaddingTextViewStyle"
                android:lineSpacingExtra="3dp"
                android:textColor="@color/orange_color" />

            <TextView
                android:id="@+id/on_vacation_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/small_textsize"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                style="@style/NoPaddingTextViewStyle"
                android:textColor="@color/orange_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/expanded_menu">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/selected_gray"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/login_pictures"
                        style="@style/NoPaddingTextViewStyle"
                        android:textColor="@color/log_pkg_out_others_color" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/login_no_picture_view"
                            android:layout_width="@dimen/pkg_details_list_item_height"
                            android:layout_height="@dimen/pkg_details_list_item_height"
                            android:background="@drawable/bg_edittext"
                            android:text="@string/no_picture"
                            android:layout_gravity="center"
                            android:textColor="@color/no_preview_color"
                            android:textSize="@dimen/smaller_than_smallest_textsize"
                            android:layout_marginTop="7dp"
                            android:layout_marginBottom="7dp"
                            android:layout_marginLeft="3dp"
                            android:gravity="center"
                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:id="@+id/loginpicturesLayout">

                            <FrameLayout
                                android:id="@+id/frame_login_image1"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/pkg_details_log_image_height"
                                android:layout_marginLeft="3dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="5dp">

                                <ProgressBar
                                    android:id="@+id/login_image1_progressbar"
                                    android:layout_width="@dimen/progressbar_width_height"
                                    android:layout_height="@dimen/progressbar_width_height"
                                    android:layout_gravity="center" />

                                <ImageView
                                    android:id="@+id/imageView1loginImage"
                                    android:layout_width="@dimen/pkg_details_log_image_height"
                                    android:layout_height="@dimen/pkg_details_log_image_height"
                                    android:clickable="true"
                                    android:adjustViewBounds="true"
                                    android:scaleType="centerCrop" />

                            </FrameLayout>

                            <FrameLayout
                                android:id="@+id/frame_login_image2"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/pkg_details_log_image_height"
                                android:layout_margin="5dp"
                                android:visibility="gone">

                                <ProgressBar
                                    android:id="@+id/login_image2_progressbar"
                                    android:layout_width="@dimen/progressbar_width_height"
                                    android:layout_height="@dimen/progressbar_width_height"
                                    android:layout_gravity="center" />

                                <ImageView
                                    android:id="@+id/imageView2loginImage"
                                    android:layout_width="@dimen/pkg_details_log_image_height"
                                    android:layout_height="@dimen/pkg_details_log_image_height"
                                    android:clickable="true"
                                    android:adjustViewBounds="true"
                                    android:scaleType="centerCrop" />

                            </FrameLayout>

                            <FrameLayout
                                android:id="@+id/frame_login_image3"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/pkg_details_log_image_height"
                                android:layout_margin="5dp"
                                android:visibility="gone">

                                <ProgressBar
                                    android:id="@+id/login_image3_progressbar"
                                    android:layout_width="@dimen/progressbar_width_height"
                                    android:layout_height="@dimen/progressbar_width_height"
                                    android:layout_gravity="center" />

                                <ImageView
                                    android:id="@+id/imageView3loginImage"
                                    android:layout_width="@dimen/pkg_details_log_image_height"
                                    android:layout_height="@dimen/pkg_details_log_image_height"
                                    android:clickable="true"
                                    android:adjustViewBounds="true"
                                    android:scaleType="centerCrop" />

                            </FrameLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/custom_message"
                        android:singleLine="false"
                        android:lineSpacingExtra="3dp"
                        android:ellipsize="none"
                        android:layout_marginBottom="5dp"
                        style="@style/NoPaddingTextViewStyle"
                        android:textColor="@color/log_pkg_out_others_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/staff_notes"
                        style="@style/NoPaddingTextViewStyle"
                        android:singleLine="false"
                        android:lineSpacingExtra="3dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/log_pkg_out_others_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/NoPaddingTextViewStyle"
                        android:id="@+id/change_history"
                        android:singleLine="false"
                        android:lineSpacingExtra="3dp"
                        android:textColor="@color/log_pkg_out_others_color" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/edit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit"
                android:layout_gravity="top"
                android:visibility="visible"
                android:contentDescription="Edit package"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/down_arrow_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_down_arrow"
                android:padding="5dp"
                android:layout_gravity="bottom"
                android:paddingRight="5dp"
                android:contentDescription="More info"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/extralayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <View
        android:id="@+id/dummyview"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/list_divider_color"/>

</LinearLayout>
