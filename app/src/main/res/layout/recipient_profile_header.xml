<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:importantForAccessibility="no"
    android:orientation="vertical">

    <com.notifii.notifiiapp.customui.CircularImageView
        android:id="@+id/profilePicImageView"
        android:layout_width="@dimen/profile_pic_height"
        android:layout_height="@dimen/profile_pic_height"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/layout_margin"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_profile_place_holder" />

    <TextView
        android:id="@+id/tv_profile_name"
        style="@style/avenirMediumTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:focusable="true"
        android:gravity="center"
        android:importantForAccessibility="yes"
        android:text="jane Smith"
        android:textSize="@dimen/big_textsize" />

    <TextView
        android:id="@+id/tv_address1"
        style="@style/avenirMediumTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:focusable="true"
        android:gravity="center"
        android:importantForAccessibility="yes"
        android:text="jane Smith"
        android:textColor="@color/log_pkg_out_others_color"
        android:textSize="@dimen/small_textsize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/iv_bouncing_alert_phone"
            android:layout_width="@dimen/bounce_alert_height"
            android:layout_height="@dimen/bounce_alert_height"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:background="@drawable/bg_sample_red"
            android:contentDescription="cellphone bounced alert"
            android:focusable="true"
            android:gravity="center"
            android:importantForAccessibility="yes"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="!"
            android:textColor="@color/background_color"
            android:textSize="@dimen/medium_textsize"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_phone"
            style="@style/NoPaddingTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="@dimen/edittext_height"
            android:layout_weight="1"
            android:background="@drawable/bg_phone_email"
            android:focusable="true"
            android:gravity="center"
            android:importantForAccessibility="yes"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_opt_type_phone"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@drawable/bg_sample"
            android:padding="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/frame_margin"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/iv_bouncing_alert_email"
            android:layout_width="@dimen/bounce_alert_height"
            android:layout_height="@dimen/bounce_alert_height"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:background="@drawable/bg_sample_red"
            android:contentDescription="email bounced alert"
            android:focusable="true"
            android:gravity="center"
            android:importantForAccessibility="yes"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="!"
            android:textColor="@color/background_color"
            android:textSize="@dimen/medium_textsize"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            style="@style/NoPaddingTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="@dimen/edittext_height"
            android:layout_weight="1"
            android:background="@drawable/bg_phone_email"
            android:focusable="true"
            android:gravity="center"
            android:importantForAccessibility="yes"
            android:textColor="@color/white"
            android:id="@+id/tv_email"/>

        <TextView
            android:id="@+id/tv_opt_type_email"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@drawable/bg_sample"
            android:padding="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/special_ins_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/frame_margin"
            android:background="@color/log_pkg_out_others_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="@dimen/bounce_alert_height"
                android:layout_height="@dimen/bounce_alert_height"
                android:layout_marginRight="5dp"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/special_ins_text"
                    style="@style/NoPaddingTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:visibility="gone"
                    android:ellipsize="end"
                    android:text="jrghjkwdggggggggggggggggggggsbivsdj"
                    android:textColor="@color/orange_color" />

                <TextView
                    android:id="@+id/vacation_ins_text"
                    style="@style/NoPaddingTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:visibility="gone"
                    android:text="jrghjkwdggggggggggggggggggggsbivsdj"
                    android:textColor="@color/orange_color" />
            </LinearLayout>

            <ImageView
                android:id="@+id/special_ins_expand_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="25dp"
                android:contentDescription="Special Instruction Expand"
                android:padding="10dp"
                android:src="@drawable/ic_expand" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/frame_margin"
        android:background="@color/log_pkg_out_others_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_tracking_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:fontFamily="@font/avenir_roman"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="Tracking #"
            android:textColor="@color/text"
            android:textSize="@dimen/medium_above_textsize" />

        <ImageView
            android:id="@+id/iv_descending_sort"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:layout_gravity="center_horizontal"
            android:contentDescription="sort by date received"
            android:src="@drawable/ic_received_icon" />

        <ImageView
            android:id="@+id/iv_ascending_sort"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:layout_gravity="center_horizontal"
            android:contentDescription="sort by date pickedup"
            android:src="@drawable/ic_delivered_icon" />

        <ImageView
            android:id="@+id/iv_right_arrow"
            android:layout_width="@dimen/right_arrow_side"
            android:layout_height="@dimen/right_arrow_side"
            android:layout_gravity="center_vertical"
            android:importantForAccessibility="no"
            android:visibility="invisible"
            android:src="@drawable/ic_right_arrow_icon" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/log_pkg_out_others_color" />

    <TextView
        android:id="@+id/textView_no_packages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/avenir_roman"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/no_packages"
        android:textColor="@color/text"
        android:textSize="@dimen/medium_above_textsize"
        android:visibility="gone" />

</LinearLayout>