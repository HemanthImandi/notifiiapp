<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/frame_margin">

    <TextView
        android:id="@+id/tv_tracking_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="3"
        android:fontFamily="@font/avenir_roman"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:textColor="@color/text"
        android:textSize="@dimen/medium_above_textsize" />

    <TextView
        android:id="@+id/tv_received_date"
        style="@style/NoPaddingTextViewStyle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1.5"
        android:gravity="center_horizontal"
        android:text="ggg"
        android:textColor="@color/hint_color"
        android:textSize="@dimen/smaller_textsize" />


    <TextView
        android:id="@+id/tv_delivered_date"
        style="@style/NoPaddingTextViewStyle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1.5"
        android:gravity="center_horizontal"
        android:text="ggg"
        android:textColor="@color/hint_color"
        android:textSize="@dimen/smaller_textsize" />

    <ImageView
        android:id="@+id/iv_right_arrow"
        android:layout_width="@dimen/right_arrow_side"
        android:layout_height="@dimen/right_arrow_side"
        android:layout_gravity="center_vertical"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_right_arrow_icon" />
</LinearLayout>

