<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingTop="7dp"
    android:paddingRight="15dp"
    android:paddingBottom="7dp">

    <LinearLayout
        android:id="@+id/main_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_edittext"
        android:orientation="horizontal"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                style="@style/avenirMediumTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="sdfdsfsdfsdf"
                android:textSize="@dimen/big_textsize" />

            <TextView
                android:id="@+id/tv_address1"
                style="@style/avenirMediumTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="sdfdsfsdfsdf"
                android:layout_marginTop="@dimen/item_margin"
                android:textColor="@color/log_pkg_out_others_color"
                android:textSize="@dimen/medium_textsize" />

            <TextView
                android:id="@+id/tv_tracking_number"
                style="@style/avenirMediumTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="sdfdsfsdfsdf"
                android:layout_marginTop="@dimen/item_margin"
                android:ellipsize="middle"
                android:textColor="@color/log_pkg_out_others_color"
                android:textSize="@dimen/medium_textsize" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_received_date"
                    style="@style/NoPaddingTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_received_small"
                    android:drawablePadding="5dp"
                    android:text="06/05/2016"
                    android:textColor="@color/log_pkg_out_others_color"
                    android:textSize="@dimen/medium_textsize" />

                <TextView
                    android:id="@+id/tv_delivered_date"
                    style="@style/NoPaddingTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@drawable/ic_delivered_small"
                    android:drawablePadding="5dp"
                    android:text="06/04/2016"
                    android:textColor="@color/log_pkg_out_others_color"
                    android:textSize="@dimen/medium_textsize" />

            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/profile_right_arrow_side"
            android:layout_height="@dimen/profile_right_arrow_side"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_right_arrow_icon" />


    </LinearLayout>
</LinearLayout>